# =========================
# Core server
# =========================
JARVIS_ENV=development
JARVIS_HOST=127.0.0.1
JARVIS_PORT=8000

# =========================
# Ollama / Models
# =========================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=deepseek-r1
OLLAMA_EMBED_MODEL=nomic-embed-text

# =========================
# Memory / RAG
# =========================
MEMORY_DIM=384
MEMORY_TOP_K=5
DISABLE_EMBEDDINGS=0

# =========================
# External APIs (optional)
# =========================
OPENWEATHER_API_KEY=
NEWS_API_KEY=
GOOGLE_SEARCH_API_KEY=

# =========================
# Files / Limits
# =========================
MAX_UPLOAD_MB=50
MAX_SESSION_MESSAGES=200

# =========================
# Speech (optional)
# =========================
ENABLE_TTS=1
ENABLE_STT=0
TTS_VOICE=default

